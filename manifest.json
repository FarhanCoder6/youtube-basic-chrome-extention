{
  "manifest_version": 3,
  "name": "YouTube Time Saver",
  "version": "1.0",
  "description": "Track YouTube video info, time, and overlays dynamically.",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "*://*.youtube.com/*"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["assets/*"],
      "matches": ["*://*.youtube.com/*"]
    }
  ]
}
